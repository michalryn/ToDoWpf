<UserControl x:Class="ToDoApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border 
        Grid.Column="0"
        Background="{StaticResource WhiteColor}"
        CornerRadius="12"
        Margin="8,0,8,8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="Black" Opacity="0.3"/>
        </Border.Effect>
        <StackPanel                    
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <TextBlock Text="Home" 
                   Foreground="Black" 
                   FontSize="25"
                       FontWeight="Bold"/>
            <Button Content="Task"
                    Height="25"
                    FontWeight="Bold"
                    Command="{Binding Path=NavigateToTaskViewCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
